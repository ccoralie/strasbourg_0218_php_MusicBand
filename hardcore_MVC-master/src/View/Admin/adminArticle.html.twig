{% extends 'layout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}

    <link rel="stylesheet" href="/assets/css/admin.css">
{% endblock %}

{% block header %}
    <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">

        <a class="navbar-brand" href="/logout">Déconnexion</a>
        <h5>Bonjour M. Olivier</h5>
    </nav>


<div class="container-fluid">
    <div class="row">
        <nav class="col-sm-3 col-md-2 hidden-xs-down bg-faded sidebar">
            <ul class="nav nav-pills flex-column">

                <li class="nav-item">
                    <a class="nav-link" href="/adminPage">Tableau de bord </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/adminGoodies">Goodies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/adminWorldtour">Prochains concerts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/adminArticle">Actualité <span class="sr-only">(current)</span></a>
                </li>


                <li class="nav-item">
                    <a class="nav-link" href="/adminFanclub">Newsletter</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/adminGalerie">Galerie photos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/adminDiscographie">Discographie</a>
                </li>

            </ul>


        </nav>

        {% endblock %}

        {% block content %}




        <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
            <h1>Actualité</h1>


            <div class="container newActu">

                <div class="row ">
                    {% for entity in article %}

                    <form action="/updateArticle" method="post">
                        <div class="form-group">
                            <input type="hidden" name="id" value="{{ entity.id }}">
                            <label for="formGroupExampleInput2">Modifier le titre</label>
                            <textarea name="titre">{{ entity.titre }}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Modifier l'article</label>
                            <textarea name="article" style="width: 200px">{{ entity.article }}</textarea>
                        </div>
                        <input type="submit" class="btn btn-warning" name="{{ entity.id }}" value="Modifier">
                    </form>

                    {% endfor %}
                </div>
            </div>
        </main>
</div>



{% endblock %}

{% block footer %}
{% endblock %}

