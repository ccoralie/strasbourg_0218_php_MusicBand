{% extends 'layout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}

    <link rel="stylesheet" href="/assets/css/admin.css">
{% endblock %}

{% block header %}

{% endblock %}

        {% block content %}
    <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">

        <a class="navbar-brand" href="/logoutAdmin">Déconnexion</a>
        <h5>Bonjour Franck-O !!!</h5>
    </nav>


<div class="container-fluid">
    <div class="row">
        <nav class="col-sm-3 col-md-2 hidden-xs-down bg-faded sidebar">
            <ul class="nav nav-pills flex-column">

                <li class="nav-item">
                    <h4>Tableau de bord </h4>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/adminArticle">Actualité</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/adminWorldtour">Prochains concerts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/adminDiscographie">Discographie </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/adminGalerie">Galerie photos<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/adminGoodies/1">Goodies</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/adminFanclub">Newsletter</a>
                </li>

            </ul>


        </nav>


        <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
            <h1>Galerie</h1>


            <form action="/uploadGalerie" method="post" enctype="multipart/form-data">
                <input type="hidden" name="MAX_FILE_SIZE" value="2000000" />
                <input type="file" name="fichier[]" multiple="multiple" />
                <input type="submit" value="Envoyer" name="submit_envoyer" />
            </form>


        <div class="container">
            <div class="row" >
                {% for entity in galerie %}
            <form action="/deleteGalerie" method="post">
                <div class="col-lg-3 col-md-4 col-xs-6">
                        <a href="{{ entity. photo}}" class="d-block mb-4 h-100">
                            <img class="img-fluid img-thumbnail" name="photo" src="{{ entity. photo}}" alt="">
                            <input type="hidden" class="btn btn-danger" name="id" value="{{ entity.id }}">
                        </a>
                    </div>
                    <input type="submit" class="btn btn-danger" name="{{ entity.id }}" value="Supprimer">
            </form>
                {% endfor %}
            </div>
        </div>

        </main>
    </div>
</div>




{% endblock %}

