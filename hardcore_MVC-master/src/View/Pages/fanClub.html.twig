{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/fanClub.css">
{% endblock %}


{% block content %}
    <header class="main-header">

        <!-- titre -->
        <div class="main-header-inner clearfix">
            <div class="main-brand">
                <a href="#">Franck & the Wilders</a>
            </div>
            <div class="nav-trigger" onclick="document.querySelector('body').classList.toggle('nav-visible');">
                <div class="fatw-icon"> <!-- LOGO -->
                    <img class="img-responsive" src="Webp.net-resizeimage.png" alt="fatw">
                </div>
                <div class="hamburger-icon"><span></span></div>
            </div>

            <nav class="main-nav">
                <div class="main-nav-inner">
                    <div class="main-nav-brand">
                        <a href="#">Franck and the Wilders</a>
                    </div>
                    <div class="main-nav-close">
                        <button onclick="document.querySelector('body').classList.toggle('nav-visible');"><img src="https://ua-1.cdn-fullscreendirect.com/10523/2018_0202_10523_7980.svg" alt=""></button>
                    </div>
                    <div class="main-nav-site">

                        <ul>
                            <li><a href="#">Accueil</a></li>
                            <li><a href="#">Prochains concerts</a></li>
                            <li><a href="#">Discographie</a></li>
                            <li><a href="#">Gallerie</a></li>
                            <li><a href="#">Goodies</a></li>
                            <li><a href="#">Fan club</a></li>

                        </ul>
                    </div>
                </div>
            </nav>

    </header>

    <form action="">
        <div class="container">
            <h2>Subscribe to our newsletter</h2>
            <p><i class="fa fa-fire"></i> Get the latest news from your favorite band!</p>
        </div>
        <div class="container">
            <input type="text" placeholder="Name" required>
            <input type="text" placeholder="Email" required>
            <button type="submit"><i class="fa fa-newspaper-o"></i> Subscribe</button>
        </div>
    </form>







{% endblock %}
